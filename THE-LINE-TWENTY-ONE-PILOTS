play :G4, sustain: 0.5  # Sol curto, nota de brilho
sleep 0.5

play :G4, sustain: 3    # Sol sustentado, encerra o primeiro acorde
sleep 1

# --- Acorde 2 ‚Äî Sol maior (G) nas notas graves ---
in_thread do
  play :G1, sustain: 6  # Sol grave
  play :G2, sustain: 6  # Sol m√©dio grave
  play :G3, sustain: 6  # Sol m√©dio
end

sleep 0.9

# --- Melodia sobre o acorde de Sol ---

play :B4, sustain: 1.5  # Si (B4), d√° leveza e transi√ß√£o
