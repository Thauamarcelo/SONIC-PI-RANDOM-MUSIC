use_bpm 80          # define o ritmo
use_synth :piano    # define o instrumento (sintetizador de piano)

# --- INTRODU√á√ÉO MEL√ìDICA ---

play :C4, sustain: 0.3  # toca a nota D√≥ (C4) rapidamente
