# Autor: ThauÃ£ Marcelo
# Estilo: Lo-fi / Chill experimental
# BPM (batidas por minuto): 80
# Efeitos usados: reverb + eco para um som mais espacial

use_bpm 80  # define o ritmo geral da mÃºsica (80 bpm = ritmo suave)

# adiciona efeitos globais (reverb e eco) para dar profundidade ao som
with_fx :reverb, mix: 0.6, room: 0.9 do
  with_fx :echo, phase: 0.5, decay: 4 do
    
    # --- ðŸ”Š BEAT (bateria) ---
    live_loop :beat do
      # toca bumbo eletrÃ´nico (kick)
      sample :bd_haus, amp: 2
      sleep 1
      # toca caixa (snare)
      sample :sn_dolf, amp: 1.2
      sleep 1
    end
    
    # --- ðŸŽ¸ BAIXO (linha de base) ---
    live_loop :bass do
      use_synth :fm  # som de baixo sintÃ©tico
      play :g2, release: 0.5  # nota Sol grave
      sleep 2
      play :f2, release: 0.5  # nota FÃ¡
      sleep 2
      play :eb2, release: 0.5 # nota Miâ™­
      sleep 2
      play :d2, release: 0.5  # nota RÃ©
      sleep 2
    end
    
    # --- ðŸŽ¹ ACORDES (harmonia) ---
    live_loop :chords do
      use_synth :piano
      play_chord [:g3, :bb3, :d4], sustain: 1.5  # acorde Gm (Sol menor)
      sleep 2
      play_chord [:f3, :a3, :c4], sustain: 1.5   # acorde F (FÃ¡ maior)
      sleep 2
      play_chord [:eb3, :g3, :bb3], sustain: 1.5 # acorde Eâ™­ (Mi bemol maior)
      sleep 2
      play_chord [:d3, :f3, :a3], sustain: 1.5   # acorde Dm (RÃ© menor)
      sleep 2
    end
    
    # --- ðŸŽµ MELODIA (sintetizador suave) ---
    live_loop :melodia do
      use_synth :hollow  # timbre oco e atmosfÃ©rico
      # toca a sequÃªncia de notas com tempos diferentes
      play_pattern_timed [:d4, :f4, :g4, :bb4, :g4], [0.5, 0.5, 1, 0.5, 1.5], amp: 0.8
      sleep 2  # pausa antes de repetir a melodia
    end
    
  end
end
