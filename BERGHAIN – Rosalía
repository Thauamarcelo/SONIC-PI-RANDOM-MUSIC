# ================================================================
# üé∂ BERGHAIN ‚Äì Rosal√≠a (reinterpreta√ß√£o em Sonic Pi)
# ---------------------------------------------------------------
# Autor: Thau√£ Marcelo
# Plataforma: Sonic Pi
# BPM base: 214
# Estilo: Experimental / Synth / Cordas
# ================================================================

use_bpm 214
use_synth :hollow  # Pode testar :blade, :prophet ou :fm para timbres alternativos

# ----------------------
# üéº Fun√ß√µes
# ----------------------

# M√£o direita: toca acordes sustentados em thread separada
define :acorde_direita do |notas|
  in_thread do
    play_chord notas, attack: 0.2, sustain: 3, release: 0.8, amp: 1.9
    sleep 0.5
  end
end

# M√£o esquerda: sequ√™ncia de notas r√°pidas que criam base r√≠tmica
define :mao_esquerda do |sequencia, tempo|
  sequencia.each do |n|
    play n, sustain: 0.15, release: 0.2, amp: 1.1
    sleep tempo
  end
end

# ================================================================
# üîπ SE√á√ïES
# ================================================================

# ----------------------
# 1Ô∏è‚É£ PRIMEIRA SE√á√ÉO ‚Äì D F A
# ----------------------
acorde_direita [:D3, :F3, :A3]   # Acorde RE‚ÄìFA‚ÄìLA
mao_esquerda [:D5, :A4, :D5, :E5, :D5, :A4, :E5, :A5, :D6, :A5, :D6, :A5, :D6, :A5], 0.3
sleep 1

# ----------------------
# 2Ô∏è‚É£ SEGUNDA SE√á√ÉO ‚Äì G D As
# ----------------------
acorde_direita [:G3, :D4, :As4]  # Acorde SOL‚ÄìRE‚ÄìL√Å‚ôØ
mao_esquerda [:E5, :D5, :As4, :G5, :As4, :G5, :D6, :G5, :As4], 0.3
sleep 1

# ----------------------
# 3Ô∏è‚É£ TERCEIRO ACORDE ‚Äì DIREITA + ESQUERDA
# ----------------------
acorde_direita [:A2, :E3, :Cs4]  # L√° maior (com D√≥ sustenido)
mao_esquerda [
  :G5, :A5, :E5, :A5, :E5, :A5,
  :E5, :E5, :F5, :G5, :E5, :G5, :E5, :Cs5, :A4, :Cs5
], 0.3

# ----------------------
# 4Ô∏è‚É£ QUARTO ACORDE ‚Äì DIREITA + ESQUERDA
# ----------------------
acorde_direita [:D3, :F3, :A3]  # R√© menor
mao_esquerda [
  :E5, :D5, :A4, :D5, :A4, :E5, :D5, :E5, :A5, :D6, :A5, :D6,
  :A5, :E5, :D5, :D5, :D5, :D5
], 0.3

# ----------------------
# 5Ô∏è‚É£ QUINTO ACORDE ‚Äì DIREITA + ESQUERDA
# ----------------------
acorde_direita [:D3, :F3, :A3]
mao_esquerda [:D5, :D5, :E5, :A5, :E5, :D5, :E5, :A5, :E5], 0.5

# ----------------------
# 6Ô∏è‚É£ SEXTO ACORDE ‚Äì DIREITA + ESQUERDA
# ----------------------
acorde_direita [:G2, :D3, :As3]  # Sol com R√© e L√°#
mao_esquerda [
  :D5, :G5, :As5, :G5, :D5, :G5, :As5, :G5
], 0.5

# ----------------------
# 7Ô∏è‚É£ S√âTIMO ACORDE ‚Äì DIREITA + ESQUERDA
# ----------------------
acorde_direita [:A2, :E3, :Cs4]  # L√° maior
mao_esquerda [
  :Cs5, :E5, :A5, :E5, :Cs5, :E5, :A5, :E5, :D5
], 0.5

# ----------------------
# 8Ô∏è‚É£ OITAVO ACORDE ‚Äì DIREITA + ESQUERDA
# ----------------------
acorde_direita [:D3, :E3, :A3]  # R√© menor (varia√ß√£o com Mi)
mao_esquerda [:D5, :E5, :A5, :E5], 0.5

# ================================================================
# üéß Fim da estrutura
